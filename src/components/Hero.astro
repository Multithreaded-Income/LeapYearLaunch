---
// Import the necessary Tailwind CSS utilities
import "@astrojs/tailwind";
import { getImage } from "astro:assets";
import { Image } from 'astro:assets';
import logo from "../assets/logo.png";

const heroImage = await getImage({ src: logo, format: "webp" });
---

<header class="text-center bg-white py-10">
  <div class="container mx-auto">
    <Image src={logo} alt="Leap Year Launch" width={640} height={360} class="mx-auto mb-4" />
  </div>
</header>
